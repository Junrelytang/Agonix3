<body>

    <div id="blocker">
        <div class="card">
            <h2 style="color: #ef4444;">AGX SECURITY SYSTEM</h2>
            <p>Enter access key to decrypt Agonix3 source.</p>
            <input type="password" id="keyInput" placeholder="Access Key">
            <br>
            <button onclick="unlockAndFetch()">DECRYPT</button>
            <p id="msg" style="font-size: 12px; margin-top: 10px;"></p>
        </div>
    </div>

    <div id="content-area">
        <h1>Agonix3 Source Code</h1>
        <pre id="output">Loading code...</pre>
    </div>

    <script>
        async function unlockAndFetch() {
            const input = document.getElementById('keyInput').value;
            const msg = document.getElementById('msg');
            const targetUrl = "https://raw.githubusercontent.com/Junrelytang/Agonix3/refs/heads/main/Agonix3";

            // Palitan mo ang 'PASSWORD123' ng gusto mong password
            if (input === 'AGX2026') {
                msg.innerText = "Decrypting...";
                msg.style.color = "#22c55e";

                try {
                    // Ito ang kukuha ng laman ng link mo
                    const response = await fetch(targetUrl);
                    const data = await response.text();
                    
                    document.getElementById('output').innerText = data;
                    document.getElementById('blocker').style.display = 'none';
                    document.getElementById('content-area').style.display = 'block';
                } catch (error) {
                    alert("Error fetching the source code. Check internet connection.");
                }
            } else {
                msg.innerText = "Invalid Access Key!";
                msg.style.color = "#ef4444";
            }
        }
    </script>
